---
interface NavItem {
  label: string;
  href: string;
  icon?: string;
  color?: 'orange' | 'green' | 'blue' | 'gray';
  active?: boolean;
}

interface Props {
  items: NavItem[];
}

const { items } = Astro.props;

const colorClasses = {
  orange: 'bg-ldd-orange hover:bg-ldd-orange-dark',
  green: 'bg-ldd-green hover:bg-ldd-green-dark',
  blue: 'bg-ldd-blue hover:bg-ldd-blue-dark',
  gray: 'bg-gray-400 hover:bg-gray-500',
};
---

<nav class="nav-sidebar space-y-2">
  {items.map(item => (
    <a
      href={item.href}
      class:list={[
        'flex items-center gap-3 px-4 py-3 rounded text-white text-sm font-medium transition-all',
        item.active ? colorClasses[item.color || 'gray'] + ' ring-2 ring-offset-2 ring-gray-400' : colorClasses[item.color || 'gray'],
      ]}
    >
      {item.icon && <span>{item.icon}</span>}
      <span>{item.label}</span>
    </a>
  ))}
</nav>
