---
import { Eye, ClipboardList, MessageSquare } from '@lucide/astro';
---

<section class="bg-ldd-gray-light py-10">
  <div class="max-w-5xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- What are the signs? -->
      <div class="flex flex-col items-center text-center">
        <div class="bg-ldd-orange text-white px-5 py-1.5 rounded-full text-sm font-semibold mb-8 shadow-sm">
          What are the signs?
        </div>
        <div class="mb-8 text-ldd-gray-dark">
          <Eye class="w-28 h-28 stroke-[1.2]" />
        </div>
        <a
          href="/behaviours"
          class="bg-ldd-orange text-white px-5 py-2 rounded text-sm font-medium hover:bg-ldd-orange-dark transition-colors inline-flex items-center gap-2"
        >
          What are the signs <span class="text-sm">→</span>
        </a>
      </div>

      <!-- What do I do? -->
      <div class="flex flex-col items-center text-center">
        <div class="bg-ldd-green text-white px-5 py-1.5 rounded-full text-sm font-semibold mb-8 shadow-sm">
          What do I do?
        </div>
        <div class="mb-8 text-ldd-gray-dark">
          <ClipboardList class="w-28 h-28 stroke-[1.2]" />
        </div>
        <a
          href="/strategies"
          class="bg-ldd-green text-white px-5 py-2 rounded text-sm font-medium hover:bg-ldd-green-dark transition-colors inline-flex items-center gap-2"
        >
          What do I do <span class="text-sm">→</span>
        </a>
      </div>

      <!-- Who do I tell? -->
      <div class="flex flex-col items-center text-center">
        <div class="bg-ldd-blue text-white px-5 py-1.5 rounded-full text-sm font-semibold mb-8 shadow-sm">
          Who do I tell?
        </div>
        <div class="mb-8 text-ldd-gray-dark">
          <MessageSquare class="w-28 h-28 stroke-[1.2]" />
        </div>
        <a
          href="/resources"
          class="bg-ldd-blue text-white px-5 py-2 rounded text-sm font-medium hover:bg-ldd-blue-dark transition-colors inline-flex items-center gap-2"
        >
          Who do I tell <span class="text-sm">→</span>
        </a>
      </div>
    </div>
  </div>
</section>
