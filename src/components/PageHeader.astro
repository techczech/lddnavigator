---
import { FileText, Puzzle, Calendar, Clock, FolderOpen, Info, CircleHelp } from '@lucide/astro';

interface Props {
  title: string;
  icon?: string;
  color?: 'orange' | 'green' | 'blue';
  breadcrumbs?: { label: string; href?: string }[];
}

const { title, icon, color = 'orange', breadcrumbs } = Astro.props;

const colorClasses = {
  orange: 'bg-ldd-orange',
  green: 'bg-ldd-green',
  blue: 'bg-ldd-blue',
};

const lineColors = {
  orange: 'border-ldd-orange',
  green: 'border-ldd-green',
  blue: 'border-ldd-blue',
};
---

<div class="bg-white border-b border-gray-200">
  <div class="max-w-5xl mx-auto px-4 py-3">
    {breadcrumbs && (
      <nav class="text-xs mb-2">
        <ol class="flex items-center gap-1.5">
          {breadcrumbs.map((crumb, index) => (
            <>
              {index > 0 && <span class="text-gray-400">Â»</span>}
              {crumb.href ? (
                <a href={crumb.href} class="text-ldd-blue hover:underline">{crumb.label}</a>
              ) : (
                <span class="text-gray-500">{crumb.label}</span>
              )}
            </>
          ))}
        </ol>
      </nav>
    )}
    <div class="flex items-center gap-4">
      <div class={`inline-flex items-center gap-2 ${colorClasses[color]} text-white px-4 py-1.5 rounded-sm`}>
        {icon === 'file-text' && <FileText class="w-5 h-5" />}
        {icon === 'puzzle' && <Puzzle class="w-5 h-5" />}
        {icon === 'calendar' && <Calendar class="w-5 h-5" />}
        {icon === 'clock' && <Clock class="w-5 h-5" />}
        {icon === 'folder' && <FolderOpen class="w-5 h-5" />}
        {icon === 'info' && <Info class="w-5 h-5" />}
        {icon === 'help' && <CircleHelp class="w-5 h-5" />}
        <h1 class="text-lg font-semibold">{title}</h1>
      </div>
      <div class={`flex-1 border-t-2 ${lineColors[color]}`}></div>
    </div>
  </div>
</div>
