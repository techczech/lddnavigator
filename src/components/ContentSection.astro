---
import { CircleHelp, Eye, ThumbsUp, Users, Info, Footprints, Puzzle, FolderOpen } from '@lucide/astro';

interface Props {
  title: string;
  icon?: string;
  id?: string;
}

const { title, icon, id } = Astro.props;
---

<section id={id} class="mb-10">
  <div class="flex items-start gap-6">
    {icon && (
      <div class="flex-shrink-0 w-24 h-24 flex items-center justify-center text-ldd-gray-dark">
        {icon === 'help' && <CircleHelp class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'eye' && <Eye class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'thumbs-up' && <ThumbsUp class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'users' && <Users class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'info' && <Info class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'footprints' && <Footprints class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'puzzle' && <Puzzle class="w-20 h-20 stroke-[1.2]" />}
        {icon === 'folder' && <FolderOpen class="w-20 h-20 stroke-[1.2]" />}
      </div>
    )}
    <div class="flex-1">
      <h2 class="text-xl font-semibold text-ldd-gray-dark mb-3">{title}</h2>
      <div class="text-gray-600 text-sm leading-relaxed space-y-3">
        <slot />
      </div>
    </div>
  </div>
</section>
