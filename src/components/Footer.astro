---
const difficultiesLinks = [
  { href: '/difficulties/dyslexia', label: 'Dyslexia' },
  { href: '/difficulties/autism', label: 'Autism' },
  { href: '/difficulties/adhd', label: 'ADHD' },
  { href: '/difficulties/dyspraxia', label: 'Dyspraxia' },
];

const strategiesLinks = [
  { href: '/strategies/colour-coded-calendars', label: 'Colour coded calendars' },
  { href: '/strategies/easy-read', label: 'Easy read materials' },
  { href: '/strategies/visual-supports', label: 'Visual supports' },
  { href: '/strategies/extra-time', label: 'Give extra time' },
  { href: '/strategies/mindmaps', label: 'Mindmaps' },
];

const aboutLinks = [
  { href: '/about', label: 'About the site' },
  { href: '/resources', label: 'Resources' },
  { href: '/behaviours', label: 'Behaviours' },
  { href: '/about#partners', label: 'Original Partners' },
];
---

<footer class="bg-ldd-footer text-white mt-auto">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <!-- Difficulties -->
      <div>
        <h3 class="text-sm font-semibold mb-3">Difficulties</h3>
        <ul class="space-y-1.5">
          {difficultiesLinks.map(link => (
            <li>
              <a href={link.href} class="text-xs text-gray-300 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Strategies -->
      <div>
        <h3 class="text-sm font-semibold mb-3">Strategies</h3>
        <ul class="space-y-1.5">
          {strategiesLinks.map(link => (
            <li>
              <a href={link.href} class="text-xs text-gray-300 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- About -->
      <div>
        <h3 class="text-sm font-semibold mb-3">About</h3>
        <ul class="space-y-1.5">
          {aboutLinks.map(link => (
            <li>
              <a href={link.href} class="text-xs text-gray-300 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social & Supported by -->
      <div>
        <h3 class="text-sm font-semibold mb-3">Recreation</h3>
        <p class="text-xs text-gray-300 mb-4">
          Recreated by <a href="https://dominiklukes.net" class="text-gray-200 hover:text-white underline" target="_blank" rel="noopener noreferrer">Dominik Lukeš</a> using Claude Code
        </p>

        <h3 class="text-sm font-semibold mb-3">Original Partners</h3>
        <div class="space-y-2">
          <div class="bg-gray-500/50 rounded px-3 py-2 text-xs text-gray-300">
            Dyslexia Action
          </div>
          <div class="bg-gray-500/50 rounded px-3 py-2 text-xs text-gray-300">
            National Autistic Society
          </div>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-500 mt-6 pt-4 text-center text-gray-400 text-xs">
      <p>LDD Navigator - Learning Difficulties and Disabilities in the Justice System</p>
      <p class="mt-1">Original site © 2013 | Released under CC BY license | This recreation © 2025</p>
    </div>
  </div>
</footer>
