---
import { Search } from '@lucide/astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/difficulties', label: 'Difficulties' },
  { href: '/strategies', label: 'Strategies' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white border-b border-gray-200">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Top bar -->
    <div class="flex items-center justify-between py-3">
      <a href="/" class="flex items-center gap-2">
        <span class="text-2xl tracking-tight">
          <span class="text-ldd-gray font-light">LDD</span>
          <span class="text-ldd-green font-normal">Navigator</span>
        </span>
        <span class="hidden md:block text-sm text-gray-500 border-l border-gray-300 pl-2 ml-1 leading-tight">
          Learning Difficulties and<br />Disabilities in the Justice System
        </span>
      </a>

      <div class="hidden md:flex items-center gap-4">
        <!-- Font size controls -->
        <div class="font-size-controls" role="group" aria-label="Font size controls">
          <button
            type="button"
            class="font-size-btn font-decrease-btn"
            aria-label="Decrease font size"
            title="Decrease font size"
          >−</button>
          <span class="font-size-label" aria-live="polite">100%</span>
          <button
            type="button"
            class="font-size-btn font-increase-btn"
            aria-label="Increase font size"
            title="Increase font size"
          >+</button>
        </div>

        <form action="/search" method="get" class="relative" id="header-search-form">
          <input
            type="search"
            name="q"
            placeholder="Search..."
            class="w-48 px-3 py-1.5 text-base border border-gray-300 rounded-sm focus:outline-none focus:ring-1 focus:ring-ldd-green focus:border-ldd-green"
            id="header-search-input"
          />
          <button type="submit" class="absolute right-1 top-1/2 -translate-y-1/2 p-1 text-gray-400 hover:text-ldd-green bg-gray-100 rounded-sm">
            <Search class="h-4 w-4" />
          </button>
        </form>
      </div>

      <div class="flex items-center gap-2 md:hidden">
        <!-- Mobile font size controls -->
        <div class="font-size-controls" role="group" aria-label="Font size controls">
          <button
            type="button"
            class="font-size-btn font-decrease-btn"
            aria-label="Decrease font size"
            title="Decrease font size"
          >−</button>
          <span class="font-size-label mobile-font-label" aria-live="polite">100%</span>
          <button
            type="button"
            class="font-size-btn font-increase-btn"
            aria-label="Increase font size"
            title="Increase font size"
          >+</button>
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="p-2 text-gray-600 hover:text-ldd-green">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="bg-ldd-green">
    <div class="max-w-4xl mx-auto px-4">
      <ul class="hidden md:flex items-center">
        {navItems.map((item, index) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-2.5 text-white text-base font-medium transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-white/20'
                  : 'hover:bg-white/10'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>

  <!-- Mobile navigation -->
  <nav id="mobile-menu" class="hidden md:hidden bg-ldd-green">
    <div class="max-w-4xl mx-auto px-4 py-2">
      <ul class="space-y-1">
        {navItems.map(item => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-2 text-white text-base font-medium rounded transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-white/20'
                  : 'hover:bg-white/10'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Font size controls
  const fontSizes = [100, 125, 150, 175, 200];
  const STORAGE_KEY = 'ldd-font-size';

  function getCurrentSizeIndex() {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored) {
      const index = fontSizes.indexOf(parseInt(stored, 10));
      return index >= 0 ? index : 0;
    }
    return 0;
  }

  function applyFontSize(sizePercent) {
    const html = document.documentElement;
    // Remove all font size classes
    fontSizes.forEach(size => {
      html.classList.remove(`font-size-${size}`);
    });
    // Add the current font size class
    html.classList.add(`font-size-${sizePercent}`);
    // Update all labels
    document.querySelectorAll('.font-size-label').forEach(label => {
      label.textContent = `${sizePercent}%`;
    });
    // Update button states
    updateButtonStates();
    // Save preference
    localStorage.setItem(STORAGE_KEY, sizePercent.toString());
  }

  function updateButtonStates() {
    const currentIndex = getCurrentSizeIndex();

    document.querySelectorAll('.font-decrease-btn').forEach(btn => {
      (btn as HTMLButtonElement).disabled = currentIndex === 0;
    });
    document.querySelectorAll('.font-increase-btn').forEach(btn => {
      (btn as HTMLButtonElement).disabled = currentIndex === fontSizes.length - 1;
    });
  }

  function initFontSize() {
    const currentIndex = getCurrentSizeIndex();
    applyFontSize(fontSizes[currentIndex]);
  }

  // Initialize on load
  initFontSize();

  // Event listeners for all decrease buttons
  document.querySelectorAll('.font-decrease-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const currentIndex = getCurrentSizeIndex();
      if (currentIndex > 0) {
        applyFontSize(fontSizes[currentIndex - 1]);
      }
    });
  });

  // Event listeners for all increase buttons
  document.querySelectorAll('.font-increase-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const currentIndex = getCurrentSizeIndex();
      if (currentIndex < fontSizes.length - 1) {
        applyFontSize(fontSizes[currentIndex + 1]);
      }
    });
  });
</script>
