---
import { Search } from '@lucide/astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/difficulties', label: 'Difficulties' },
  { href: '/strategies', label: 'Strategies' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white border-b border-gray-200">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Top bar -->
    <div class="flex items-center justify-between py-3">
      <a href="/" class="flex items-center gap-2">
        <span class="text-2xl tracking-tight">
          <span class="text-ldd-gray font-light">LDD</span>
          <span class="text-ldd-green font-normal">Navigator</span>
        </span>
        <span class="hidden md:block text-xs text-gray-500 border-l border-gray-300 pl-2 ml-1 leading-tight">
          Learning Difficulties and<br />Disabilities in the Justice System
        </span>
      </a>

      <div class="hidden md:flex items-center">
        <form action="/search" method="get" class="relative" id="header-search-form">
          <input
            type="search"
            name="q"
            placeholder="Search..."
            class="w-48 px-3 py-1.5 text-sm border border-gray-300 rounded-sm focus:outline-none focus:ring-1 focus:ring-ldd-green focus:border-ldd-green"
            id="header-search-input"
          />
          <button type="submit" class="absolute right-1 top-1/2 -translate-y-1/2 p-1 text-gray-400 hover:text-ldd-green bg-gray-100 rounded-sm">
            <Search class="h-4 w-4" />
          </button>
        </form>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600 hover:text-ldd-green">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="bg-ldd-green">
    <div class="max-w-4xl mx-auto px-4">
      <ul class="hidden md:flex items-center">
        {navItems.map((item, index) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-2.5 text-white text-sm font-medium transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-white/20'
                  : 'hover:bg-white/10'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>

  <!-- Mobile navigation -->
  <nav id="mobile-menu" class="hidden md:hidden bg-ldd-green">
    <div class="max-w-4xl mx-auto px-4 py-2">
      <ul class="space-y-1">
        {navItems.map(item => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-2 text-white text-sm font-medium rounded transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-white/20'
                  : 'hover:bg-white/10'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
