---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/difficulties', label: 'Difficulties' },
  { href: '/strategies', label: 'Strategies' },
  { href: '/behaviours', label: 'Behaviours' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Top bar -->
    <div class="flex items-center justify-between py-4">
      <a href="/" class="flex items-center gap-3">
        <span class="text-3xl font-light text-ldd-gray">
          LDD <span class="text-ldd-green font-normal">Navigator</span>
        </span>
        <span class="hidden md:block text-sm text-gray-500 border-l border-gray-300 pl-3">
          Learning Difficulties and<br />Disabilities in the Justice System
        </span>
      </a>

      <div class="hidden lg:flex items-center gap-4">
        <div class="relative">
          <input
            type="search"
            placeholder="Search..."
            class="w-64 px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-ldd-green focus:border-transparent"
          />
          <button class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-ldd-green">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-600 hover:text-ldd-green">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Navigation -->
    <nav class="bg-ldd-green -mx-4 px-4">
      <ul class="hidden lg:flex items-center gap-1">
        {navItems.map(item => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-5 py-3 text-white font-medium transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-ldd-green-dark'
                  : 'hover:bg-ldd-green-dark/50'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Mobile navigation -->
    <nav id="mobile-menu" class="hidden lg:hidden bg-ldd-green -mx-4 px-4 py-2">
      <ul class="space-y-1">
        {navItems.map(item => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-2 text-white font-medium rounded transition-colors',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'bg-ldd-green-dark'
                  : 'hover:bg-ldd-green-dark/50'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
