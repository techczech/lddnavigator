---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import { difficulties } from '../data/difficulties';

const resourceTypes = [
  { id: 'webpage', label: 'Web pages', icon: 'üåê' },
  { id: 'document', label: 'Documents/Articles', icon: 'üìÑ' },
  { id: 'book', label: 'Books', icon: 'üìö' },
  { id: 'download', label: 'Downloadable resources', icon: 'üì•' },
];

const allResources = [
  { title: 'British Dyslexia Association', url: 'https://www.bdadyslexia.org.uk', type: 'webpage', difficulty: 'Dyslexia' },
  { title: 'Dyslexia Action', url: 'https://dyslexiaaction.org.uk', type: 'webpage', difficulty: 'Dyslexia' },
  { title: 'National Autistic Society', url: 'https://www.autism.org.uk', type: 'webpage', difficulty: 'Autism' },
  { title: 'Autism: A guide for criminal justice professionals', url: 'https://www.autism.org.uk/cjs', type: 'document', difficulty: 'Autism' },
  { title: 'ADHD Foundation', url: 'https://adhdfoundation.org.uk', type: 'webpage', difficulty: 'ADHD' },
  { title: 'Dyspraxia Foundation', url: 'https://dyspraxiafoundation.org.uk', type: 'webpage', difficulty: 'Dyspraxia' },
  { title: 'Releasing Potential for Dyslexic Offenders', type: 'document', difficulty: 'Dyslexia' },
  { title: 'Calendar templates', type: 'download', difficulty: 'General' },
  { title: 'Easy read guidelines', type: 'document', difficulty: 'General' },
];
---

<Layout title="Resources">
  <PageHeader
    title="Resources"
    icon="üìÅ"
    color="green"
    breadcrumbs={[
      { label: 'Home', href: '/' },
      { label: 'Resources' },
    ]}
  />

  <section class="py-12">
    <div class="max-w-5xl mx-auto px-4">
      <!-- Search and filters -->
      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div class="grid md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Search by difficulty</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-ldd-green">
              <option value="">All difficulties</option>
              {difficulties.map(diff => (
                <option value={diff.id}>{diff.title}</option>
              ))}
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Search by resource type</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-ldd-green">
              <option value="">All types</option>
              {resourceTypes.map(type => (
                <option value={type.id}>{type.label}</option>
              ))}
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-ldd-green">
              <option value="">Any rating</option>
              <option value="4">4+ stars</option>
              <option value="3">3+ stars</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Keywords</label>
            <div class="flex gap-2">
              <input
                type="text"
                placeholder="Search..."
                class="flex-1 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-ldd-green"
              />
              <button class="bg-ldd-green text-white px-4 py-2 rounded hover:bg-ldd-green-dark transition-colors">
                Search
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Resources table -->
      <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-700">Resource type</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-700">Title</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-700">Rating</th>
              <th class="text-left px-4 py-3 text-sm font-semibold text-gray-700">Related difficulty</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {allResources.map(resource => (
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">
                  <span class="inline-flex items-center gap-2 text-sm">
                    <span>{resource.type === 'webpage' ? 'üåê' : resource.type === 'document' ? 'üìÑ' : resource.type === 'download' ? 'üì•' : 'üìö'}</span>
                    <span class="text-ldd-blue capitalize">{resource.type}</span>
                  </span>
                </td>
                <td class="px-4 py-3">
                  {resource.url ? (
                    <a href={resource.url} target="_blank" rel="noopener noreferrer" class="text-ldd-blue hover:underline">
                      {resource.title}
                    </a>
                  ) : (
                    <span class="text-gray-700">{resource.title}</span>
                  )}
                </td>
                <td class="px-4 py-3">
                  <span class="text-ldd-yellow">‚òÖ‚òÖ‚òÖ‚òÖ‚òÜ</span>
                </td>
                <td class="px-4 py-3">
                  <a href={`/difficulties/${resource.difficulty.toLowerCase()}`} class="text-ldd-blue hover:underline">
                    {resource.difficulty}
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <!-- Audience sections -->
      <div class="mt-12 space-y-8">
        <div id="frontline" class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-semibold text-ldd-gray-dark mb-4">For Front Line Prison Workers</h2>
          <p class="text-gray-600 mb-4">
            As a front line worker, you are often the first to notice when someone may be struggling with a learning difficulty. These resources will help you identify signs and apply basic strategies.
          </p>
          <ul class="list-disc pl-6 space-y-2 text-gray-600">
            <li>Quick reference guide to common behaviours</li>
            <li>Simple strategies you can use immediately</li>
            <li>When and how to refer to specialists</li>
          </ul>
        </div>

        <div id="specialist" class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-semibold text-ldd-gray-dark mb-4">For Prison SEN Specialists</h2>
          <p class="text-gray-600 mb-4">
            As a SEN specialist, you need in-depth knowledge about different learning difficulties and evidence-based interventions. These resources provide more detailed information.
          </p>
          <ul class="list-disc pl-6 space-y-2 text-gray-600">
            <li>Assessment tools and screening resources</li>
            <li>Detailed information about each difficulty</li>
            <li>Training materials and CPD resources</li>
          </ul>
        </div>

        <div id="governor" class="bg-white rounded-lg shadow-sm p-6">
          <h2 class="text-xl font-semibold text-ldd-gray-dark mb-4">For Prison Governors</h2>
          <p class="text-gray-600 mb-4">
            As a governor, you need to understand the strategic importance of supporting people with learning difficulties and how to create an environment that enables this.
          </p>
          <ul class="list-disc pl-6 space-y-2 text-gray-600">
            <li>Policy guidance and best practice</li>
            <li>Business case for LDD support</li>
            <li>Training and development resources</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
