---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import { difficulties } from '../data/difficulties';
import { FolderOpen, Globe, BookOpen, Download, Star } from '@lucide/astro';

const resourceTypes = [
  { id: 'webpage', label: 'Webpage', icon: 'globe' },
  { id: 'document', label: 'Document', icon: 'file' },
  { id: 'book', label: 'Book', icon: 'book' },
  { id: 'download', label: 'Download', icon: 'download' },
];

const allResources = [
  { title: 'Calendar templates', url: '#', type: 'download', rating: 0, difficulties: ['Dyslexia', 'Autism'] },
  { title: 'Organisation tips', url: '#', type: 'webpage', rating: 4, difficulties: ['Dyslexia', 'Autism'] },
  { title: 'Read about dyslexia', url: '#', type: 'book', rating: 4, difficulties: ['Dyslexia', 'Autism'] },
  { title: 'British Dyslexia Association', url: 'https://www.bdadyslexia.org.uk', type: 'webpage', rating: 4, difficulties: ['Dyslexia'] },
  { title: 'National Autistic Society', url: 'https://www.autism.org.uk', type: 'webpage', rating: 5, difficulties: ['Autism'] },
  { title: 'ADHD Foundation', url: 'https://adhdfoundation.org.uk', type: 'webpage', rating: 4, difficulties: ['ADHD'] },
];
---

<Layout title="Resources">
  <PageHeader
    title="Resources"
    icon="folder"
    color="green"
    breadcrumbs={[
      { label: 'Home', href: '/' },
      { label: 'Resources' },
    ]}
  />

  <section class="py-8">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Search and filters -->
      <div class="bg-white border border-gray-200 rounded p-4 mb-6">
        <div class="grid md:grid-cols-5 gap-3 items-end">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Search by difficulty</label>
            <select class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-ldd-green">
              <option value="">Dyslexia</option>
              {difficulties.map(diff => (
                <option value={diff.id}>{diff.title}</option>
              ))}
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Search by resource type</label>
            <select class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-ldd-green">
              <option value="">- Select -</option>
              {resourceTypes.map(type => (
                <option value={type.id}>{type.label}</option>
              ))}
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Rating</label>
            <select class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-ldd-green">
              <option value="">★★★★☆</option>
              <option value="5">★★★★★</option>
              <option value="4">★★★★☆</option>
              <option value="3">★★★☆☆</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Words in title/description</label>
            <input
              type="text"
              placeholder=""
              class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-ldd-green"
            />
          </div>
          <div>
            <button class="w-full bg-ldd-green text-white px-4 py-1.5 rounded text-sm font-medium hover:bg-ldd-green-dark transition-colors flex items-center justify-center gap-1">
              Search <span class="text-xs">▶</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Resources table -->
      <div class="bg-white border border-gray-200 rounded overflow-hidden mb-8">
        <table class="w-full text-sm">
          <thead class="bg-gray-100 border-b border-gray-200">
            <tr>
              <th class="text-left px-4 py-2 font-semibold text-gray-700">Resource type</th>
              <th class="text-left px-4 py-2 font-semibold text-gray-700">Title</th>
              <th class="text-left px-4 py-2 font-semibold text-gray-700">Rating</th>
              <th class="text-left px-4 py-2 font-semibold text-gray-700">Related difficulty</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {allResources.map(resource => (
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2">
                  <span class="inline-flex items-center gap-2 text-xs">
                    {resource.type === 'download' && <FolderOpen class="w-4 h-4 text-gray-500" />}
                    {resource.type === 'webpage' && <Globe class="w-4 h-4 text-gray-500" />}
                    {resource.type === 'book' && <BookOpen class="w-4 h-4 text-gray-500" />}
                    <a href="#" class="text-ldd-blue hover:underline capitalize">{resource.type}</a>
                  </span>
                </td>
                <td class="px-4 py-2">
                  <a href={resource.url || '#'} target="_blank" rel="noopener noreferrer" class="text-ldd-blue hover:underline">
                    {resource.title}
                  </a>
                </td>
                <td class="px-4 py-2">
                  {resource.rating === 0 ? (
                    <span class="text-gray-400 text-xs">not rated yet</span>
                  ) : (
                    <span class="text-amber-400">
                      {'★'.repeat(resource.rating)}{'☆'.repeat(5 - resource.rating)}
                    </span>
                  )}
                </td>
                <td class="px-4 py-2">
                  {resource.difficulties.map((diff, i) => (
                    <>
                      {i > 0 && ', '}
                      <a href={`/difficulties/${diff.toLowerCase()}`} class="text-ldd-blue hover:underline">
                        {diff}
                      </a>
                    </>
                  ))}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>
</Layout>
